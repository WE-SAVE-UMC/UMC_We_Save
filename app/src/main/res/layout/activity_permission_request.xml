<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PermissionRequestActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WE SAVE"
            android:textColor="#F84A32"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 이용을 위해"
            android:textColor="#636363"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="다음의 접근 권한이 필요합니다."
        android:textColor="#636363"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/Required_Access_Right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="48dp"
        android:text="필수 접근권한"
        android:textColor="#636363"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/phone_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phone_icon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/phonenumber_tv"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textColor="#4A4A4A"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="178sp"
                android:layout_height="wrap_content"
                android:text="본인인증 전화번호 회원가입 시 필요"
                android:textColor="#7D7D7D"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/Location_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/location_icon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Location_tv"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="위치정보"
                android:textColor="#4A4A4A"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="178sp"
                android:layout_height="wrap_content"
                android:text="사용자의 위치 기반 사건,사고 안내"
                android:textColor="#7D7D7D"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/save_space_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/save_space_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/save_space_tv"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="저장공간"
                android:textColor="#4A4A4A"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="188sp"
                android:layout_height="wrap_content"
                android:text="앱 사용을 위한 파일 저장,읽기 시 필요"
                android:textColor="#7D7D7D"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/agreement_tv"
        android:layout_width="320dp"
        android:layout_height="96dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:padding="16dp"
        android:textColor="#7D7D7D"
        android:textSize="10sp"
        android:background="@drawable/gray_circle_8"/>
    <TextView
        android:id="@+id/agree_sign_up_tv"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:paddingStart="108dp"
        android:paddingTop="12dp"
        android:text="동의하고 가입하기"
        android:textSize="16sp"
        android:background="@drawable/gray_circle_8"/>


</LinearLayout>