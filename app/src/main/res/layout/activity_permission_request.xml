<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionRequestActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:text="WE SAVE"
        android:textColor="@color/red_50"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:text=" 이용을 위해"
        android:textColor="@color/gray_70"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/title_text"
        app:layout_constraintTop_toTopOf="@id/title_text"
        />

    <TextView
        android:id="@+id/permissions_needed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:text="다음의 접근 권한이 필요합니다."
        android:textColor="@color/gray_70"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/required_access_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:text="필수 접근권한"
        android:textColor="@color/gray_70"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permissions_needed_text"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/phone_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/phone_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/required_access_right_tv"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/phonenumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:text="전화번호"
        android:textColor="@color/gray_80"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/phone_iv"
        app:layout_constraintTop_toTopOf="@id/phone_iv"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/phone_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인인증 전화번호 회원가입 시 필요"
        android:textColor="@color/gray_60"
        android:textFontWeight="400"
        android:fontFamily="@font/pretandard"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/phone_iv"
        app:layout_constraintTop_toBottomOf="@id/phonenumber_tv"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/location_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/location_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_iv"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:text="위치정보"
        android:textColor="@color/gray_80"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/location_iv"
        app:layout_constraintTop_toTopOf="@id/location_iv"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/location_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자의 위치 기반 사건,사고 안내"
        android:textColor="@color/gray_60"
        android:textFontWeight="400"
        android:fontFamily="@font/pretandard"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/location_iv"
        app:layout_constraintTop_toBottomOf="@id/location_tv"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/save_space_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/save_space_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_iv"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/save_space_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:text="저장공간"
        android:textColor="@color/gray_80"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/save_space_iv"
        app:layout_constraintTop_toTopOf="@id/save_space_iv"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/save_space_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 사용을 위한 파일 저장,읽기 시 필요"
        android:textColor="@color/gray_60"
        android:textFontWeight="400"
        android:fontFamily="@font/pretandard"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/save_space_iv"
        app:layout_constraintTop_toBottomOf="@id/save_space_tv"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/agreement_tv"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:padding="16dp"
        android:textColor="@color/gray_60"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="500"
        android:textSize="10sp"
        android:background="@drawable/gray_circle_8"
        app:layout_constraintTop_toBottomOf="@id/save_space_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/text1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_60"
        android:textFontWeight="500"
        android:textSize="10sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:text="앱 실행을 위해서 설정 - 애플리케이션 관리자 - WE SAVE - 권한에서\n권한을 허용해주시기 바랍니다."
        app:layout_constraintTop_toTopOf="@id/agreement_tv"
        app:layout_constraintStart_toStartOf="@id/agreement_tv"
        />
    <TextView
        android:id="@+id/text2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_60"
        android:textFontWeight="500"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:text="필수 권한을 허용하지 않으면 WE SAVE 를 이용하실 수 없습니다."
        app:layout_constraintTop_toBottomOf="@id/text1_tv"
        app:layout_constraintStart_toStartOf="@id/agreement_tv"
        />
    <TextView
        android:id="@+id/text3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_60"
        android:textFontWeight="500"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:text="휴대폰 SMS 본인 인증시 인증번호 6자리가 채워질 수 있습니다."
        app:layout_constraintTop_toBottomOf="@id/text2_tv"
        app:layout_constraintStart_toStartOf="@id/agreement_tv"
        />
    <TextView
        android:id="@+id/agree_sign_up_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="동의하고 가입하기"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:textSize="16sp"
        android:background="@drawable/red_button"
        app:layout_constraintTop_toBottomOf="@id/agreement_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>