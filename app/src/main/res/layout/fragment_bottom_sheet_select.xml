<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        android:paddingTop="16dp"
        app:behavior_peekHeight="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dialog_select_finish_iv"
            android:layout_width="152dp"
            android:layout_height="48dp"
            android:background="@drawable/style_red_button"
            android:text="상황 종료 처리"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dialog_select_delete_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/dialog_select_delete_tv"
            android:layout_width="152dp"
            android:layout_height="48dp"
            android:background="@drawable/style_gray_button"
            android:text="삭제하기"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/dialog_select_finish_iv"
            app:layout_constraintStart_toEndOf="@id/dialog_select_finish_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dialog_select_finish_iv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>