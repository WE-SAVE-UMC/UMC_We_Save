<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="center"
        app:navigationIcon="@drawable/ic_chevron_24"
        app:title="설정"
        app:titleTextAppearance="@style/App.TextAppearance.Toolbar.Title" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:liftOnScroll="false">

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:orientation="vertical">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_setting_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            
            <ImageView
                android:id="@+id/mypage_setting_block_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_circle_off"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView
                android:id="@+id/mypage_setting_block_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차단관리"
                android:textSize="16sp"
                android:textColor="@color/gray_90"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/mypage_setting_block_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_setting_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/mypage_setting_location_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/mypage_setting_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심지역 설정"
                android:textSize="16sp"
                android:textColor="@color/gray_90"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/mypage_setting_location_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_setting_bell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/mypage_setting_bell_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_bell"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/mypage_setting_bell_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림 설정"
                android:textSize="16sp"
                android:textColor="@color/gray_90"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/mypage_setting_bell_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_setting_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/mypage_setting_user_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/mypage_setting_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정 설정"
                android:textSize="16sp"
                android:textColor="@color/gray_90"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/mypage_setting_user_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>