<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.createAccount.CreateAccountNameActivity">

    <ImageView
        android:id="@+id/we_save_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/we_save_mini_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/we_save_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오신 것을 환영합니다!"
        android:textSize="16sp"
        android:textColor="@color/gray_70"
        android:textFontWeight="500"
        android:lineHeight="20dp"
        android:fontFamily="@font/pretandard"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/we_save_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>

    <ProgressBar
        android:id="@+id/create_naem_progressbar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/CustomProgressBar"
        android:progress="25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/we_save_text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="84dp"/>

    <TextView
        android:id="@+id/enter_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_naem_progressbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/gray_80"
        android:textSize="24sp"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="600"
        android:lineHeight="32dp"
        android:text="이름 입력"/>

    <TextView
        android:id="@+id/sub_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인인증을 위해 이름을 입력해주세요."
        app:layout_constraintTop_toBottomOf="@id/enter_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="500"
        android:textColor="@color/gray_50"
        android:textSize="16sp"
        android:lineHeight="20dp"/>

    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@id/sub_text_tv"
        android:background="@drawable/edittext_background"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="14sp"
        android:textFontWeight="500"
        android:textColor="@color/gray_90"
        android:fontFamily="@font/pretandard"
        android:paddingStart="16dp"
        android:hint="이름을 입력해주세요."
        android:inputType="textPersonName"
        android:imeOptions="actionNext"/>
    <Button
        android:id="@+id/name_button_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/red_button"
        android:backgroundTint="#F84A32"
        android:textColor="@color/white"
        android:layout_marginTop="222dp"
        android:text="확인"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:paddingStart="108dp"
        android:paddingEnd="108dp"
        app:layout_constraintTop_toBottomOf="@id/name_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>