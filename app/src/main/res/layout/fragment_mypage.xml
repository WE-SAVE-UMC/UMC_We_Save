<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_05"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/mypage_my_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_90"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
        android:id="@+id/mypage_setting_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/group"
        android:layout_marginEnd="20dp"
        android:padding="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_my_tv"
        app:layout_constraintBottom_toBottomOf="@id/mypage_my_tv"/>

    <ImageView
        android:id="@+id/mypage_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/mypage_my_tv"
        app:layout_constraintTop_toBottomOf="@id/mypage_my_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김재난"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_90"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/mypage_profile_iv"
        app:layout_constraintTop_toTopOf="@id/mypage_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/mypage_profile_iv"/>
    
    <Button
        android:id="@+id/mypage_profile_edlt_btn"
        android:layout_width="71dp"
        android:layout_height="24dp"
        android:text="프로필 수정"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:backgroundTint="@color/red_20"
        android:textColor="@color/red_70"
        android:padding="0dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/mypage_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/mypage_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mypage_content_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        app:tabIndicatorFullWidth="true"
        app:tabSelectedTextColor="@color/gray_80"
        app:tabTextColor="@color/gray_40"
        app:tabIndicatorColor="@color/red_50"
        app:tabRippleColor="#00ff0000"
        app:tabTextAppearance="@style/CustomTabText"
        android:background="@color/gray_05"
        app:tabBackground="@drawable/tab_selector"
        app:layout_constraintTop_toBottomOf="@id/mypage_profile_iv">
        
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="작성한 글" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="댓글 단 글"/>
    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/mypage_container_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_content_tab"/>





</androidx.constraintlayout.widget.ConstraintLayout>