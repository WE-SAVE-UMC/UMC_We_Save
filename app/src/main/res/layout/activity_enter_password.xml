<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/enter_password_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정"
        android:textColor="@color/gray_80"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_marginTop="232dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/enter_password_sub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 비밀번호를 입력해주세요."
        android:textColor="@color/gray_50"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/enter_password_title_tv"
        app:layout_constraintTop_toBottomOf="@id/enter_password_title_tv"/>

    <EditText
        android:id="@+id/enter_password_et"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="비밀번호를 입력해주세요."
        android:inputType="number"
        android:textSize="14sp"
        android:background="@drawable/shape_edittext_gray_box"
        android:paddingStart="16dp"
        android:layout_marginTop="104dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_password_sub_tv"/>


    <TextView
        android:id="@+id/enter_password_incorrect_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 틀립니다."
        android:textSize="12sp"
        android:textColor="@color/red_60"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/enter_password_et"
        app:layout_constraintStart_toStartOf="@id/enter_password_et"/>

    <TextView
        android:id="@+id/enter_password_find_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textColor="@color/gray_60"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/enter_password_et"
        app:layout_constraintTop_toBottomOf="@id/enter_password_et"/>


    <TextView
        android:id="@+id/enter_password_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="비밀번호 재설정"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_bold"
        android:background="@drawable/gray_button"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>