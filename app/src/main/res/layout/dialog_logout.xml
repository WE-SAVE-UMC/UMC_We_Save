    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_logout"
        android:layout_width="280dp"
        android:layout_height="232dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_dialog_logout_view">

        <TextView
            android:id="@+id/dialog_logout_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray_90"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dialog_logout_text_1_tv"/>
        
        <TextView
            android:id="@+id/dialog_logout_text_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정말 로그아웃 하시겠습니까?"
            android:textSize="16sp"
            android:textColor="@color/gray_80"
            android:layout_marginTop="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_logout_title_tv"
            app:layout_constraintBottom_toTopOf="@id/dialog_logout_text_2_tv"/>

        <TextView
            android:id="@+id/dialog_logout_text_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="다음 로그인 시, 등록된 전화번호로\n위세이브에 로그인 하실 수 있습니다."
            android:textSize="12sp"
            android:textColor="@color/gray_60"
            android:layout_marginTop="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_logout_text_1_tv"
            app:layout_constraintBottom_toTopOf="@id/dialog_logout_num_tv"/>

        <TextView
            android:id="@+id/dialog_logout_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-0000-0000"
            android:textSize="12sp"
            android:textColor="@color/red_50"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_logout_text_2_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_logout_cancel"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_dialog_logout_cancel"
        app:layout_constraintStart_toStartOf="@id/dialog_logout"
        app:layout_constraintBottom_toBottomOf="@id/dialog_logout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="16sp"
            android:textColor="@color/gray_90"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_logout_ok"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_dialog_logout_okay"
        app:layout_constraintEnd_toEndOf="@id/dialog_logout"
        app:layout_constraintBottom_toBottomOf="@id/dialog_logout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>