<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.createAccount.CreateAccountPasswordActivity">

    <ProgressBar
        android:id="@+id/password_progressbar"
        style="@style/CustomProgressBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="196dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:progress="85"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 입력"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="600"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:textSize="24dp"
        android:textColor="@color/gray_80"
        app:layout_constraintTop_toBottomOf="@id/password_progressbar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/password_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위세이브에서 사용할 비밀번호를 입력해주세요."
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_50"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="500"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/password_title"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/enter_password_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="104dp"
        android:importantForAutofill="no"
        android:paddingStart="16dp"
        android:hint="비밀번호를 입력해주세요"
        android:textSize="14sp"
        android:textFontWeight="500"
        android:textColor="@color/gray_90"
        android:fontFamily="@font/pretandard"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"
        tools:ignore="RtlSymmetry"
        app:layout_constraintTop_toBottomOf="@id/password_subtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/reenter_password_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:importantForAutofill="no"
        android:paddingStart="16dp"
        android:layout_marginEnd="20dp"
        android:textFontWeight="500"
        android:textColor="@color/gray_90"
        android:fontFamily="@font/pretandard"
        android:hint="비밀번호를 재입력해주세요"
        android:textSize="14sp"
        android:background="@drawable/edittext_background"
        tools:ignore="RtlSymmetry"
        app:layout_constraintTop_toBottomOf="@id/enter_password_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"/>

    <TextView
        android:id="@+id/password_error_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/red_60"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="400"
        android:lineHeight="16dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="입력한 비밀번호가 다릅니다."
        app:layout_constraintTop_toBottomOf="@id/reenter_password_number"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/password_button_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/red_button"
        android:backgroundTint="#F84A32"
        android:layout_marginStart="20dp"
        android:textColor="@color/gray_00"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="222dp"
        android:text="확인"
        android:fontFamily="@font/pretandard"
        android:textFontWeight="700"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingStart="108dp"
        android:paddingEnd="108dp"
        app:layout_constraintTop_toBottomOf="@id/enter_password_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>