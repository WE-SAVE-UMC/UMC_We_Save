<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/setting_user_withdraw_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴 시 주의사항"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/gray_90"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/setting_user_withdraw_text_tv"/>
    
    <TextView
        android:id="@+id/setting_user_withdraw_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴 후 7일 이내 로그인 시 계정을 복구할 수 있\n습니다. 7일 이후에는 계정 데이터 정보가 삭제되며, \n위세이브 서비스를 기반으로 제공되는 재난 안내 재난\n알림 정보 검색 등 서비스를 이용하실 수 없습니다.\n또한 서비스 탈퇴 완료 후 7일간 재가입 하실 수 없습\n니다."
        android:textColor="@color/gray_70"
        android:textSize="14sp"
        android:lineSpacingExtra="3dp"
        android:translationY="-1.45sp"
        android:fontFamily="@font/pretendard_medium"
        android:background="@drawable/shape_gray05_box"
        android:paddingStart="25dp"
        android:paddingTop="16sp"
        android:paddingBottom="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/setting_user_withdraw_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/setting_user_withdraw_notice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*위세이브는 주의사항을 숙지하지 않아 발생하는 피해를 책임지지 않습니다."
        android:textSize="10sp"
        android:textColor="@color/red_50"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_marginTop="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_user_withdraw_text_tv"/>

    <Button
        android:id="@+id/setting_user_withdraw_ok_btn"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:text="주의사항을 확인했으며, 탈퇴합니다."
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/red_50"
        android:layout_marginBottom="69dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>