<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/reset_password_logo_iv"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/we_save_mini_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/reset_password_tv"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="비밀번호 재설정"
        android:textColor="@color/gray_70"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/reset_password_logo_iv"
        app:layout_constraintStart_toStartOf="@id/reset_password_logo_iv" />

    <TextView
        android:id="@+id/reset_password_num_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호 입력"
        android:textColor="@color/gray_80"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="@id/reset_password_logo_iv"
        app:layout_constraintTop_toBottomOf="@id/reset_password_tv"/>

    <TextView
        android:id="@+id/reset_password_num_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인 인증을 위해 정보를 입력해주세요."
        android:textColor="@color/gray_50"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/reset_password_logo_iv"
        app:layout_constraintTop_toBottomOf="@id/reset_password_num_title_tv"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reset_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_password_num_subtitle_tv">

        <EditText
            android:id="@+id/reset_password_name_et"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/shape_edittext_gray_box"
            android:hint="이름"
            android:paddingStart="16dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reset_password_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/reset_password_name_et">

            <EditText
                android:id="@+id/reset_password_birth_et"
                android:layout_width="152dp"
                android:layout_height="44dp"
                android:background="@drawable/shape_edittext_gray_box"
                android:hint="주민번호"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="16dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/reset_password_line_iv"
                android:layout_width="12dp"
                android:layout_height="2dp"
                android:src="@drawable/figure_gray_cylinder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/reset_password_birth_next"
                app:layout_constraintStart_toEndOf="@id/reset_password_birth_et"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/reset_password_birth_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/reset_password_birth_next_et"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_edittext_gray_box"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/reset_password_birth_next_2_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="●●●●●●"
                    android:textColor="@color/gray_90" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/reset_password_agency_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_edittext_gray_box"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="통신사 선택"
            android:textColor="@color/gray_40"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reset_password_birth" />

        <ImageView
            android:id="@+id/reset_password_agency_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/right_arrow_icon"
            app:layout_constraintBottom_toBottomOf="@id/reset_password_agency_tv"
            app:layout_constraintEnd_toEndOf="@id/reset_password_agency_tv"
            app:layout_constraintTop_toTopOf="@id/reset_password_agency_tv" />

        <EditText
            android:id="@+id/reset_password_num_et"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_edittext_gray_box"
            android:hint="전화번호를 입력해주세요."
            android:inputType="phone"
            android:paddingStart="16dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reset_password_agency_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/reset_password_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/gray_button"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:text="인증번호 요청"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>